<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="city"
            type="com.spacitron.citiesapp.CityViewModel.FilterableCity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fadedColorPrimary"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:padding="@dimen/quarter_standard_margin">

        <TextView
            android:id="@+id/textView"
            android:elevation="@dimen/half_standard_margin"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_margin"
            android:text="@{city.displayName}" />
    </LinearLayout>
</layout>